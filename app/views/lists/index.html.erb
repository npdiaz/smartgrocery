<div class=" list-index content">
    <h2>Your lists</h2>


  <div class="btn-group">
      <button type="button" class="btn btn-default">All</button>
      <button type="button" data-toggle="dropdown" class="btn btn-default dropdown-toggle"><span class="caret"></span></button>
      <ul class="dropdown-menu">
          <li>
             <%= link_to "All", lists_path %>
          </li>
          <% @lists.each do |li| %>
            <li>
              <%= link_to list_path(li) do %>
                <p><%= li.name %></p>
              <% end %>
            </li>
          <% end %>
      </ul>
  </div>

<br>
<br>

  <div class="btn btn-primary">
    <%= link_to new_list_path do %>
      <p> Create a list</p>
    <% end %>
  </div>

  <br>
  <br>

  <div>
    <% @lists.each do |list| %>
      <% list.ingredients.each do |ing|%>
        <div>
          <h4>To buy</h4>
          <% if ing.bought == false %>
            <div class="each-ing">
              <li style="list-style-type:none;">
                <span id="tobuy" class="item-tobuy"><%= ing.name %></span>
                <span class="definition">for (<%= list.name %>)</span> &nbsp;&nbsp;
                <i class="far fa-square box" id="square"></i>
              </li>
            </div>
          <% end %>
        </div>
    <hr>
        <div>
          <h6>Completed</h6>
          <% if ing.bought == true %>
            <div class="each-ing">
              <li style="list-style-type:none;">
                <span id="tobuy" class="item-bought"><%= ing.name %></span>
                <span class="definition">for (<%= list.name %>)</span> &nbsp;&nbsp;
                <i class="far fa-check-square box"></i>
              </li>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>

<br>
<br>
<br>
<br>
