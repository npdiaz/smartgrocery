<h2> Create a list </h2>

<%= simple_form_for(@list) do |f| %>
      <%= f.input :name, label: 'Name your list', input_html: { style: "display: none;"} %>
      <%= f.input :name, placeholder: 'e.g. My birthday lunch', label: false, input_html: { id: "nameInput", class: "hidden" } %>

    <div class = "form-action form-container">
      <%= f.button :submit, class: 'btn btn-primary form', id: 'back' %>
    </div>

  <% end %>

